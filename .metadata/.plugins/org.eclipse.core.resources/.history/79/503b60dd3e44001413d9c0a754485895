/**
 * Imports Scanner functionality.
 */
import java.util.*;

/**
 * This class calculates which Guild Wars 2 Race you are based on your responses.
 */
public class GW2RaceQuiz {
	/**
	 * This method keeps track of variables.
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
		
		//quiz title
		System.out.println("Which Guild Wars 2 race are you?");
				
		//define attribute variables
		int curiosity = 0;
		int empathy = 0;
		int heroism = 0;
		int ingenuity = 0;
		int pragmatism = 0;
				
		//following methods
		questionOne(curiosity, empathy, heroism, ingenuity, pragmatism);
		
		//TODO create a method that keeps track of variables
		//TODO create a method that asks questions and returns answers to main
		
		//example of "if" statement to determine which race you are
		if (curiosity > empathy) {
			race = "Sylvari";
		} else {
			race = "Norn";
		}
		
		System.out.println("You belong to the %s!", race);
	}
		
	/**
	 * The following methods use Scanner to request answers to questions.
	 */
	public static int questionOne(int curiosity, int empathy, int heroism, int ingenuity, int pragmatism) {
		//first question
		Scanner questionOne = new Scanner(System.in);
		System.out.println("Question 1:");
		System.out.println("Please enter the number of your answer.");
		System.out.println("Answer 1");
		System.out.println("Answer 2");
		System.out.println("Answer 3");
		System.out.println("Answer 4");
		System.out.println("Answer 5");
		
		String answerOne = questionOne.next();
		
		//returns ++ for appropriate trait variable
		String answerOne = questionOne.nextLine();
		if (answerOne.equals("1")) {
			return curiosity = +1;
		} else if (answerOne.equals("2")) {
			return empathy = +1;
		} else if (answerOne.equals("3")) {
			return heroism = +1;
		} else if (answerOne.equals("4")) {
			return ingenuity = +1;
		} else if (answerOne.equals("5")) {
			return pragmatism = +1;
		}
	}

}
